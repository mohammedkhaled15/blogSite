<div class="author">
  <h1 class="author__heading">Hi, I am Mohammed Khaled</h1>
  <p class="author__body">MERN Stack Developer</p>
</div>

<img src="/img/hero-image.jpg" class="hero-image" alt="thinking-man" />

<section class="article">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <div class="pagination">
    <span class="pagination">
      Page no: <%= currentPage === lastPage?`${currentPage} (last
      page)`:currentPage %>
    </span>

    <div class="navigation">
      <span>
        <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; Older Posts</a>
        <% } %>
      </span>
      <span>
        <% if (prevPage !== null) { %>
        <a href="/?page=<%= prevPage %>" class="pagination">
          Newer Posts &gt;</a
        >
        <% } %> <%= console.log(prevPage,currentPage,nextPage) %>
      </span>
    </div>
  </div>
</section>
